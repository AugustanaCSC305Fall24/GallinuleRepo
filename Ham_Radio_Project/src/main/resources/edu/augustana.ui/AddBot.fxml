<BorderPane fx:id="addBotPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.ui.AddBotController">
   <top>
      <Label text="Add a new CW bot" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="botName" GridPane.columnIndex="1" />
            <TextField fx:id="message" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Bot name:" />
            <Label text="Bot message:" GridPane.rowIndex="1" />
            <Slider fx:id="charSpeed" blockIncrement="5.0" majorTickUnit="5.0" max="20.0" min="5.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="20.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Character Speed" GridPane.rowIndex="2" />
            <Slider fx:id="effectiveSpeed" blockIncrement="5.0" majorTickUnit="5.0" max="20.0" min="5.0" minorTickCount="5" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="20.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Effective Speed" GridPane.rowIndex="3" />
            <Label text="Frequency" GridPane.rowIndex="4" />
            <Slider fx:id="frequency" blockIncrement="0.01" majorTickUnit="0.01" max="7.067" min="7.0" minorTickCount="10" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="7.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Volume" GridPane.rowIndex="5" />
            <Slider fx:id="volume" blockIncrement="5.0" majorTickUnit="10.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#finishAddingBotAction" text="Add bot" />
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
         </children>
      </HBox>
   </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.ui.CreateScenarioController">
   <children>
      <BorderPane prefHeight="406.0" prefWidth="600.0">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" translateX="9.0">
                     <children>
                        <Label text="Bot Name" />
                        <TextField fx:id="botName" prefHeight="26.0" prefWidth="220.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Label text="First Message" />
                        <TextField fx:id="botFirstMessage" prefHeight="26.0" prefWidth="220.0" translateX="-2.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" translateX="-17.0">
                     <children>
                        <Label text="Expected Response" />
                        <TextField fx:id="expectedFirstResponse" prefHeight="26.0" prefWidth="220.0" translateX="-1.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" translateX="-11.0">
                     <children>
                        <Label text="Second Message" />
                        <TextField fx:id="botSecondMessage" prefHeight="26.0" prefWidth="220.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" translateX="-18.0">
                     <children>
                        <Label text="Expected Response" />
                        <TextField fx:id="expectedSecondResponse" prefHeight="26.0" prefWidth="220.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" translateX="-3.0">
                     <children>
                        <Label text="Final Message" />
                        <TextField fx:id="botThirdMessage" prefHeight="26.0" prefWidth="220.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <Button mnemonicParsing="false" onAction="#createNewBot" text="Create" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
         <top>
            <Button mnemonicParsing="false" onAction="#goBack" text="Back" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </Button>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
